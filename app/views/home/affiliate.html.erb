  <div id="heading_row" class="row animated fadeIn">
    <%= render "heading_row", title: "Affiliate Revenue" %>
  </div>

  <% if !@metrics.blank? %>

  <div class="row" id="chart_tile">
    <%= render "chart_tile" %>
  </div>

  <div class="row" id="metric_tiles">
    <%= render "metric_tiles" %>
  </div>

  <div class="row">
    <div class="col-sm-12">
      <div class="panel panel-default animated fadeIn">
        <div class="panel-body">
          <%= column_chart Metric.where(
                charge_type: "affiliate_revenue",
                metric_date: 12.months.ago..@date
              ).group(:app_title).sum(:revenue) %>
        </div>
        <div class="panel-footer text-center">
          <h5>Affiliate Revenue (Last 12 Months)</h5>
        </div>
      </div>
    </div>
    <div class="col-sm-12">
      <div class="panel panel-default animated fadeIn">
        <div class="panel-body">
          <%= pie_chart Metric.where(charge_type: "affiliate_revenue", metric_date: 12.months.ago..@date).group(:app_title).sum(:revenue) %>
        </div>
        <div class="panel-footer text-center">
          <h5>Affiliate Split (Last 12 Months)</h5>
        </div>
      </div>
    </div>
  </div>

  <% else %>
    <div class="row">
      <div class="col-sm-12">
        <div class="panel panel-default animated shake">
          <div class="panel-body">
            <div class="col-sm-12 text-center">
              <h2>Hmmm...</h2>
                <p>Looks like you have no Affiliate Revenue (yet!) :(</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  <% end %>
